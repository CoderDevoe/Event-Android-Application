<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/destroix_fifa"
    android:visibility="gone">
    <TextView
        android:id="@+id/view_destroix_fifa_dates"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="(E_V_E_N_T_  _S_C_H_E_D_U_L_E)"
        android:textSize="40sp"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/view_destroix_fifa_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:text=""
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/roundrect">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@drawable/spons_draw"
            android:layout_gravity="center"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/destroix_fifa_spons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:text="sponsored by"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
           />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:id="@+id/destroix_spons_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp">
            <com.jackandphantom.circularprogressbar.CircleProgressbar
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                app:cpb_foregroundProgressColor="@color/colorAccent"
                app:cpb_foregroundProgressWidth="15"
                app:cpb_progress="100"
                app:cpb_roundedCorner="true"
                app:cpb_touchEnabled="false"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/pnp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/roundrect"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@drawable/spons_draw"
            >
            <TextView
                android:id="@+id/view_destroix_fifa_rules"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rules and regulations"
                android:layout_centerInParent="true"

                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/destroix_fifa_rules"
            android:textSize="15sp"
            android:padding="8dp"

            android:layout_gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/view_destroix_fifa_reg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:text="REGISTRATION FEE\n( click to register )->"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
        <RelativeLayout
            android:id="@+id/view_destroix_fifa_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <com.jackandphantom.circularprogressbar.CircleProgressbar

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                app:cpb_foregroundProgressColor="@color/colorAccent"
                app:cpb_foregroundProgressWidth="15"
                app:cpb_progress="100"
                app:cpb_roundedCorner="true"
                app:cpb_touchEnabled="false"
                />
            <TextView
                android:id="@+id/view_destroix_fifa_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="rs 300\nper member"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/roundrect"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@drawable/spons_draw"
            >
            <TextView
                android:id="@+id/view_destroix_fifa_coordinators"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="event coordinator"
                android:layout_centerInParent="true"

                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/view_destroix_fifa_coordinator_text"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAKHYA JYOTI BURAGOHAIN: \n+91 9678412127\n
MANASH KONWAR: +91 8638885151"
            android:textSize="15sp"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>

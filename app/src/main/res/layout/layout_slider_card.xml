<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/tools"


    android:layout_gravity="center"

    android:foregroundTint="@color/colorBack"
    android:background="@color/colorBack"
    android:backgroundTint="@color/colorBack"

    card:background="@color/colorBack"
    app:cardBackgroundColor="@color/colorBack"
    app:cardElevation="0dp"
    android:elevation="0dp"
    card:elevation="0dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        android:layout_marginTop="10dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="51dp"
        android:background="@drawable/roundrect"
        android:elevation="16dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/tic"
             android:orientation="vertical"
             >
             <util.android.textviews.FontTextView
                 android:id="@+id/days"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="ALL DAYS"
                 android:textSize="20sp"
                 android:fontFamily="ass.ttf"
                 android:textColor="#ffffff"
                 android:layout_gravity="center"
                 android:textAlignment="center"
                 android:layout_marginTop="14dp"
                 android:layout_marginLeft="4dp"
                 android:layout_marginRight="4dp"
                 android:elevation="16dp"

                 />
             <util.android.textviews.FontTextView
                 android:id="@+id/pass"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="[|Combo|Pass|]"
                 android:textSize="21sp"
                 android:fontFamily="kg.ttf"
                 android:textColor="#ffffff"
                 android:layout_gravity="center"
                 android:textAlignment="center"
                 android:layout_marginTop="14dp"
                 android:layout_marginLeft="4dp"
                 android:layout_marginRight="4dp"
                 android:elevation="16dp"
                 />
         </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/price"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:src="@drawable/rib_all"
        android:scaleType="fitXY"
        android:elevation="16dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"/>
    <!--  <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@android:color/black"
          android:alpha="0"/>-->
    <ListView
        android:id="@+id/list"
        android:layout_below="@id/price"
        android:layout_marginLeft="28dp"
        android:layout_width="180dp"
        android:layout_height="100dp"
         android:textAlignment="center"
        android:scrollbars="vertical"
        android:elevation="16dp"

        android:layout_centerHorizontal="true"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buy"

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list"
        android:layout_centerHorizontal="true"


        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        fancy:fb_borderColor="@color/colorAccent"
        fancy:fb_borderWidth="1dp"
        fancy:fb_text="BUY"
        fancy:fb_textColor="#ffffff"
        fancy:fb_textSize="10sp"
        fancy:fb_textFont="ass.ttf"
        fancy:fb_textGravity="bottom"
        fancy:fb_defaultColor="#476623"
        fancy:fb_focusColor="@color/colorBack"
        fancy:fb_radius="5dp"
        android:elevation="16dp"

        />

</RelativeLayout>

</android.support.v7.widget.CardView>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.devashish.tt20.Contact.Contacts"
    android:background="@color/colorBack"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/diagonalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:background="@drawable/curved_rect"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/kaziview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kazi"
                        />
                </RelativeLayout>

<LinearLayout
    android:id="@+id/conview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <util.android.textviews.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[|Talent|Tantra|-|Comic|On|2018|]"
            android:textSize="22sp"
            android:fontFamily="kg.ttf"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundrect"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:elevation="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_desc"
                android:textSize="15sp"
                android:padding="13dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect"
        android:elevation="6dp">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add"
                android:padding="4dp"
                android:layout_gravity="center_vertical"/>
            <util.android.textviews.FontTextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="venue address"

                android:textSize="18sp"
                android:fontFamily="ass.ttf"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaziranga University\nKoraikhuwa 785006 - Jorhat, Assam"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect"
        android:elevation="6dp">
        <LinearLayout
            android:id="@+id/tel"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/call"
                android:padding="4dp"
                android:layout_gravity="center_vertical"/>
            <util.android.textviews.FontTextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="telephone"

                android:textSize="18sp"
                android:fontFamily="ass.ttf"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tel">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+91) 8486034360\n(+91) 8486034362\n(+91) 7399593295\n(+91) 8811849323"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrect"
        android:elevation="6dp">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"
                android:padding="4dp"
                android:layout_gravity="center_vertical"/>
            <util.android.textviews.FontTextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"

                android:textSize="18sp"
                android:fontFamily="ass.ttf"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ttemail"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="talenttantra@kazirangauniversity.in"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
